<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signin.RegisterActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="221dp"
        android:layout_height="221dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031"
        app:srcCompat="@drawable/icon_app" />


    <androidx.cardview.widget.CardView
        android:id="@+id/name"
        android:layout_width="370dp"
        android:layout_height="160dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/blue_"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.427">

        <TextView
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:text="Username  : "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="201dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="110dp"
            android:hint="Username"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="8dp"
            android:text="Email           : "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="201dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="110dp"
            android:hint="Email@gmail.com"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gender_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="8dp"
            android:text="Gender        : "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etGender"
            android:layout_width="201dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="110dp"
            android:hint="Male / Female"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/birth_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="8dp"
            android:text="Tgl Lahir     : "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etBrith"
            android:layout_width="201dp"
            android:layout_height="40dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="110dp"
            android:hint="19-01-1999"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginStart="8dp"
            android:text="Password   : "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="201dp"
            android:layout_height="40dp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="110dp"
            android:hint="Password"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/contactInput"
        android:layout_width="372dp"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="@color/blue_"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66">

        <TextView
            android:id="@+id/contact_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Name contact          : "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etNameContact"
            android:layout_width="201dp"
            android:layout_height="40dp"
            android:layout_marginStart="160dp"
            android:hint="Name Emergency Contact"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/contact_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:text="Emergency contact : "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etContact"
            android:layout_width="201dp"
            android:layout_height="40dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="30dp"
            android:hint="mail@example.com"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_blue"
        android:fontFamily="@font/urbanist_medium"
        android:text="Daftar"
        android:textColor="#ffffff"
        app:backgroundTint="#283558"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78" />

</androidx.constraintlayout.widget.ConstraintLayout>
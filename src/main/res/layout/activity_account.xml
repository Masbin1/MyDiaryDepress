<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".ui.signin.AccountActivity">



    <Button
        android:id="@+id/account_signin"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_blue"
        android:fontFamily="@font/urbanist_medium"
        android:text="Masuk dengan password"
        android:textColor="#ffffff"
        app:backgroundTint="#283558"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.573" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="396dp"
        android:layout_height="52dp"
        android:fontFamily="@font/urbanist_bold"
        android:gravity="center"
        android:text="Ayo masuk"
        android:textColor="#283558"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/textSignUp"
        android:layout_width="152dp"
        android:layout_height="43dp"
        android:fontFamily="@font/urbanist_bold"
        android:gravity="center"
        android:text="Tidak punya akun?"
        android:textColor="#283558"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/signUp"
        android:layout_width="152dp"
        android:layout_height="43dp"
        android:fontFamily="@font/urbanist_bold"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="#D32F2F"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914"
        tools:ignore="HardcodedText,MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291"
        app:srcCompat="@drawable/img_home" />


</androidx.constraintlayout.widget.ConstraintLayout>
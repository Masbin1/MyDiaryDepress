<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_"
    android:padding="16dp"
    tools:context=".ui.welcome.WelcomeSecondActivity">


    <ImageView
        android:id="@+id/img_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/wlm_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/urbanist_bold"
        android:gravity="center"
        android:text="Jaga Terus Dirimu"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/img_2"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/txt_21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/urbanist_medium"
        android:gravity="center"
        android:text="Kesehatan saat ini yang nomor satu. Jika kita sehat kita bisa melakukan apa saja yang kita suka, perhatikan ya"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_2"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_rounded"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="#283558"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>